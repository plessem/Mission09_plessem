
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!--twitter bootstrap and javascript-->
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    <!--Font Awesome library for cart button-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />

</head>
<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-2">BOOK STORE</span>
        <!--adding a cart button with the cart icon-->
        <a class="btn btn-light float-right" asp-page="/Checkout">
            <i class="fas fa-shopping-cart"></i>
            <span>Cart</span>
        </a>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">

            <vc:categories></vc:categories>
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>

</body>
</html>