@{
}

@model IEnumerable<string>


<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-categoryType="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a>


</div>
<br />

<!--adding in something extra bootstrap, card container for filtering by category-->
<div >
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                Filter By Category
            </h5>
        </div>
        <div class="collapse show" aria-labelledby="headingOne">
            <div class="card-body">
                @foreach (string t in Model)
                {
                    <div class="mt-1">
                        <a asp-controller="Home" asp-action="Index" asp-route-categoryType="@t" asp-route-pageNum="1"
                           class="btn btn-block @(ViewBag.SelectedCat == t ? "btn-primary" : "btn-outline-secondary")">@t</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



